{
  "name": "@boldr/core",
  "version": "0.1.0-alpha.1",
  "description": "universal react content management framework",
  "homepage": "https://github.com/strues/boldr",
  "bugs": {
    "url": "https://github.com/strues/boldr/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Steven Truesdell",
    "email": "steven@strues.io",
    "url": "strues.io"
  },
  "main": "lib/boldr-core.node.commonjs.js",
  "module": "lib/boldr-core.node.esmodules.js",
  "browser": "lib/boldr-core.browser.esmodules.js",
  "files": [
    "index.js",
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strues/boldr.git"
  },
  "scripts": {
    "clean": "rimraf lib && rimraf es",
    "format": "prettier --single-quote=true --jsx-bracket-same-line=false --trailing-comma=all --print-width=100 --write \"src/**/*.js\"",
    "prepare": "rimraf lib && NODE_ENV=production prepublish",
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "./internal/jestTransform.js"
    },
    "testRegex": ".*.test\\.js",
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coveragePathIgnorePatterns": [
      "./(internal|lib)/",
      "/flow-typed/",
      "/__fixtures__/",
      "/node_modules/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/",
      "/.boldr/",
      "/lib/",
      "/styles/"
    ]
  },
  "dependencies": {
    "invariant": "^2.2.2",
    "lodash": "^4.17.4",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-apollo": "^1.4.11",
    "react-helmet": "^5.1.3",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "serialize-javascript": "^1.4.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "babel-jest": "^20.0.3",
    "babel-preset-boldr": "^0.10.2",
    "eslint": "^4.4.1",
    "eslint-config-boldr": "0.12.5",
    "fast-async": "^6.3.0",
    "jest": "^20.0.4",
    "prepublish": "^1.2.7",
    "prettier": "^1.5.3",
    "react-router-dom": "^4.1.2",
    "redux-mock-store": "^1.2.3",
    "rimraf": "^2.6.1"
  },
  "peerDependencies": {

    "prop-types": "^15.5.10"
  }
}
