{
  "name": "@boldr/auth",
  "version": "0.1.0-alpha.1",
  "description": "JWT and localStorage mock for Boldr frontend.",
  "main": "lib/boldr-auth.node.commonjs.js",
  "module": "lib/boldr-auth.node.esmodules.js",
  "browser": "lib/boldr-auth.browser.esmodules.js",
  "files": [
    "lib"
  ],
  "keywords": [
    "jwt"
  ],
  "license": "MIT",
  "author": {
    "name": "Steven Truesdell",
    "email": "steven@strues.io",
    "url": "strues.io"
  },
  "homepage": "https://github.com/strues/boldr#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strues/boldr.git"
  },
  "bugs": {
    "url": "https://github.com/strues/boldr/issues"
  },
  "scripts": {
    "clean": "rimraf lib",
    "format": "prettier --single-quote=true --jsx-bracket-same-line=false --trailing-comma=all --print-width=100 --write \"src/**/*.js\"",
    "prepare": "rimraf lib && NODE_ENV=production prepublish",
    "test": "NODE_ENV=test jest"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "./internal/jestTransform.js"
    },
    "testRegex": ".*.test\\.js",
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coveragePathIgnorePatterns": [
      "./(internal|build)/",
      "/flow-typed/",
      "/__fixtures__/",
      "/node_modules/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/",
      "/.boldr/",
      "/build/",
      "/styles/"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-jest": "^20.0.3",
    "babel-preset-boldr": "^0.10.1",
    "eslint": "^4.3.0",
    "eslint-config-boldr": "^0.12.4",
    "jest": "^20.0.4",
    "prepublish": "^1.1.3",
    "prettier": "^1.5.3"
  }
}
