{
  "name": "boldr-utils",
  "version": "0.4.0-rc.1",
  "description": "Helpers designed for use with Boldr and fullstack react apps",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strues/boldr.git"
  },
  "scripts": {
    "build": "npm run clean && babel src --out-dir lib",
    "clean": "rimraf lib",
    "prepublish": "npm run clean && npm run build",
    "format": "prettier --single-quote=true --jsx-bracket-same-line=false --trailing-comma=all --write \"src/**/*.js\"",
    "test": "jest"
  },
  "keywords": [
    "boldr",
    "react",
    "webpack",
    "dev",
    "helpers"
  ],
  "main": "lib/index.js",
  "files": [
    "lib/*"
  ],
  "author": "Steven Truesdell <steven@strues.io>",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/src/",
      "/lib/"
    ]
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "lodash.invokemap": "^4.6.0",
    "lodash.reduce": "^4.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.5.2",
    "eslint": "^4.0.0",
    "eslint-config-boldr": "^0.9.10",
    "jest": "^20.0.4",
    "prettier": "^1.4.4",
    "rimraf": "^2.6.1"
  }
}
